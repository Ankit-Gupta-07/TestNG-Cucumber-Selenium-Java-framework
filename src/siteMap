src/
 └── main/
     └── java/
         ├── POM/                ← page classes (inherit BaseClass)
         │    ├── LoginPage.java
         │    ├── HomePage.java
         │    └── ProfilePage.java
         ├── Utility/            ← framework backbone
         │    ├── BaseClass.java         ← contains config, locators, driver
         │    ├── WebDriverLaunch.java   ← threadlocal driver setup
         │    ├── ConfigReader.java      ← optional, config-related utils
         │    └── DataReader.java        ← future test data reader
         ├── CucumberFeatures/   ← .feature files
     └── resources/
         ├── config.properties
         ├── locators.properties
         └── TestData/
 └── test/
     └── java/
         ├── StepDefs/           ← glue code
         │    └── LoginSteps.java
         ├── Runner/            ← runner classes
         │    └── TestNGRunner.java
